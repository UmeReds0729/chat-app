<div class="side-bar__header">
  <%= link_to current_user.name, edit_user_path(current_user), class: "side-bar__header-name" %>
  <%= link_to "チャットを作成する", new_room_path, class: "side-bar__header-link" %>
</div>

<div class="side-bar__content">
  <ul class="side-bar__room-list">
    <% current_user.rooms.each do |room| %>
    <li class="side-bar__room-list__item"><%= link_to room.name, room_messages_path(room) %></li>
    <% end %>
  </ul>
</div>